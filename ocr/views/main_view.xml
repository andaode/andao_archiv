<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="main_search_view">
            <field name="name">main_view_view.search</field>
            <field name="model">ocr.document</field>
            <field name="priority" eval="2" />
            <field name="arch" type="xml">
                <search>
                    <group string="Group By">
                        <filter name="received_on" string="By Received" context="{'group_by': 'received_on'}"/>
                        <filter name="scanned_on" string="By Scanned" context="{'group_by': 'scanned_on'}"/>
                    </group>
                   <field name="doc_text"/>
                    <field name="doc_name" />
                    <field name="is_not_read" string="Not readed"/>
                    <!--<field name="received_on"/>-->
                   <!--<field name="scanned_on"/>-->
                </search>
            </field>
        </record>



        <record model="ir.ui.view" id="main_tree_view">
            <field name="name">main_view_view.tree</field>
            <field name="model">ocr.document</field>
            <field name="arch" type="xml">
                <tree string="Main view">
                    <field name="doc_name" />
                    <field name="scanned_on" />
                    <field name="received_on"  />
                    <field name="is_not_read" string="Not read"/>
                    <field name="reminder" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="main_view_view">
            <field name="name">main_view_view.form</field>
            <field name="model">ocr.document</field>
            <field name="arch" type="xml">
                <form string="Main view">
                     <header>
                        <button name="make_is_read" type="object" string="Read"
                                class="oe_highlight"/>
                             </header>

                    <group string="Info">
							<group>
                                     <field name="owner" required="1"  />
                                     <field name="doc_name" />
                                     <field name="reminder" />
                            </group>
                            <group>
                                <field name="scanned_on" />
                                <field name="received_on"  />
                                <field name="is_not_read" />
                            </group>

                    </group>
                        <field name="file_upload" widget="image" />
                        <field name="image_big" widget="image" />

                    <notebook>
                           <page string="Document text">
                                  <field name="doc_text"  />
                           </page>
                  </notebook>
                    <div class="oe_chatter">
	                    <field name="message_follower_ids" widget="mail_followers"/>
	                    <field name="message_ids" widget="mail_thread"/>
	                </div>



                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_external_id">
        <field name="name">View Name</field>
        <field name="model">ocr.document</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
             <kanban>
                <field name="owner"/>
                <!--list of field to be loaded -->
                <field name="scanned_on"/>
                <templates>
                     <t t-name="kanban-box">

                        <div class="oe_product_vignette">
                            <div class="oe_product_img">
                            <a type="edit"><img t-att-src="kanban_image('ocr.document', 'image_small', record.id.value)" class="oe_product_photo"/></a>
                            </div>
                            <div class="oe_product_desc">
                                <h4><a type="edit"><field name="doc_name"></field></a></h4>
                                <ul>
                                    <li><field name="doc_name"></field></li>
                                    <li>Scanned on: <field name="scanned_on"></field></li>
                                    <li>Read: <field name="is_not_read"></field></li>
                                </ul>
                            </div>
                        </div>
                        <script>
                            $('.oe_product_photo').load(function() { if($(this).width() > $(this).height()) { $(this).addClass('oe_product_photo_wide') } });
                        </script>
                        <div></div>
                    </t>
                </templates>
            </kanban>
        </field>
        </record>


         <record id="reminder_calendar_view" model="ir.ui.view">
                <field name="name">ocr.calendar</field>
                <field name="model">ocr.document</field>
                <field name="arch" type="xml">
                       <calendar  string="Reminder" color="doc_name" date_start="reminder" date_stop="reminder" >
                            <field name="doc_name"/>
                       </calendar>

                </field>
        </record>


    </data>
</openerp>
